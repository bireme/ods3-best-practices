{% extends "::base.html.twig" %}

{% block title %}{% trans %}Technical Assessment{% endtrans %}{% endblock %}

{% block content %}
    
    <div class="container-fluid main-content see-submission">

        <div class="row">
            <div class='col-md-12'>
                <h1 class="page-header">{% trans %}Technical Assessment{% endtrans %}</h1>
            </div>
        </div>

        {% if documents %}
            <div class="row">
                <div class="col-md-6">
                    <h2 class='sub-header' style="margin-top: 0;">{% trans %}Reviewer{% endtrans %}</h2>
                    <ul>
                        {% for document in documents %}
                            <li>
                                <a href="{{ document.uri }}" target="_blank">
                                    <span data-toggle="tooltip" data-placement="top" title="{{ document.description }}">
                                        {{ document.title }}
                                    </span>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <br />
        {% endif %}
        
        {% include 'Proethos2CoreBundle:Protocol:meta.html.twig' %}

        <!-- action -->
        <form method="POST" id='form-action'>
            
            <input type="hidden" name="token" value="{{ csrf_token('initial-committee-review-revisor') }}"/>
            <input type="hidden" id="input-is-final-revision" name="is-final-revision" value="false">

            <div class='block action'>
                <a name='action'></a>
                <div class='row'>
                    <div class="col-md-12">
                        <h2 class='sub-header'>{% trans %}Reviewer's evaluation{% endtrans %}:</h2>
                    </div>
                </div>

                <div class='row'>
                    <div class="col-md-12">
                        <div class="form-group required">
                            <label for="select-final-decision">Decisions:</label>
                            <a class="help-text" href="{{ path("crud_admin_help_show", {help_id: 125} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                            <select class="form-control select2" id="select-final-decision" name="final-decision" required {% if protocol_revision.isFinalRevision %}disabled{% endif %}>
                                <option value="">-</option>
                                {% for key, option in decision_options %}
                                    <option value="{{ key }}" {% if protocol_revision.finalDecision == key %}selected{% endif %}>{{ option }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>
                <div class='row'>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="textarea-other-comments">{% trans %}Comments{% endtrans %}:</label> 
                            <a class="help-text" href="{{ path("crud_admin_help_show", {help_id: 120} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                            <textarea class="form-control" id='textarea-other-comments' name="other-comments" rows="5" {% if protocol_revision.isFinalRevision %}readonly{% endif %}>{{ protocol_revision.otherComments }}</textarea>
                        </div>
                    </div>
                </div>
                <div class='row'>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="textarea-suggestions">{% trans %}Recommendations{% endtrans %}:</label> 
                            <a class="help-text" href="{{ path("crud_admin_help_show", {help_id: 121} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                            <textarea class="form-control" id='textarea-suggestions' name="suggestions" rows="5" {% if protocol_revision.isFinalRevision %}readonly{% endif %}>{{ protocol_revision.suggestions }}</textarea>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class='row'>
                <div class='submission-button-controls col-md-12'>
                    <button type="submit" class='btn btn-primary' id='button-save' {% if protocol_revision.isFinalRevision %}disabled{% endif %}>{% trans %}Save{% endtrans %}</button>
                    <button type="button" class='btn btn-primary' id='button-save-and-finish' {% if not protocol_revision.finalDecision or protocol_revision.isFinalRevision %}disabled{% endif %}>
                        {% trans %}Save and mark as final revision{% endtrans %}
                    </button>
                </div>
            </div>
        </form>
    </div>

    

{% endblock %}

{% block script %}
    <script>
        $(function(){
            $("body").on("click", "#button-save-and-finish", function(e){
                $("#input-is-final-revision").val('true');
                $("#form-action").submit();
            });
        });
    </script>
{% endblock %}
