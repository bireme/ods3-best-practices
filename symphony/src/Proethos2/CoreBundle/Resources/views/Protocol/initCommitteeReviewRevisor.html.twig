                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
                    <button type="button" class="btn btn-primary" id="button-confirm-send-review">{% trans %}Confirm{% endtrans %}</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block script %}
    <script>
        $(function(){
            var decision = {% if protocol_revision.finalDecision %}true{% else %}false{% endif %};
            var is_final_decision = {% if protocol_revision.isFinalRevision %}true{% else %}false{% endif %};

            if ( is_final_decision ) {
                $('input').iCheck('disable'); // change input's state to 'disabled'
            }

            $('.radio-scoring').on('ifChecked', function(event){
                zeroScores();
            });

            $('input[name=zero-scores]').on('ifChecked', function(event){
                var val = $('input[name=zero-scores]:checked').val();

                if ( "yes" == val ) {
                    $("#button-save").prop("disabled", false);
                    if ( decision ) $("#button-save-and-finish").prop("disabled", false);
                } else {
                    $("#button-save").prop("disabled", true);
                    if ( decision ) $("#button-save-and-finish").prop("disabled", true);
                }
            });

            $( 'input[name$=feedback]' ).on( 'ifChecked', function() {
                var val = $(this).val();
                var name = $(this).attr('name');
                var prefix = name.substring(0, name.indexOf('-'));
                var textarea = name.replace(prefix,'textarea');

                if ( 'yes' == val ) {
                    $("#"+textarea).parent().removeClass("hide");
                    $("#"+textarea).prop('required',true);
                } else {
                    $("#"+textarea).parent().addClass("hide");
                    $("#"+textarea).prop('required',false);
                }
            });

            $("body").on("click", "#button-confirm-send-review", function(e){
                $("#input-is-final-revision").val('true');
                $("#form-action").submit();
            });

            $("body").on("click", ".modal-help-text", function(e){
                var text = $(this).data('text');
                $(".modal-body-text").text(text);
            });
/*
            $('#zero-scores-no').on('ifChecked', function(event){
                alert("{% trans %}Please check the attributes that were scored as zero{% endtrans %}");
            });
*/
        });

        function zeroScores() {
            var scoring = [];
            var scoring1 = $('input[name=effectiveness-scoring]:checked').val();
            var scoring2 = $('input[name=cost-effectiveness-scoring]:checked').val();
            var scoring3 = $('input[name=efficiency-scoring]:checked').val();
            var scoring4 = $('input[name=sustainability-scoring]:checked').val();
            var scoring5 = $('input[name=replicability-adaptability-scoring]:checked').val();
            var scoring6 = $('input[name=innovation-scoring]:checked').val();
            var scoring7 = $('input[name=participation-scoring]:checked').val();
            var scoring8 = $('input[name=cross-cutting-themes-scoring]:checked').val();

            scoring.push(scoring1);
            scoring.push(scoring2);
            scoring.push(scoring3);
            scoring.push(scoring4);
            scoring.push(scoring5);
            scoring.push(scoring6);
            scoring.push(scoring7);
            scoring.push(scoring8);

            var scoring = scoring.reduce( (acc, x ) => acc.concat(+x), []);
            const sum = scoring.reduce((a, b) => a + b, 0);
            const avg = (sum / scoring.length) || 0;
            var rounded = Math.round(avg * 10) / 10

            $("#input-average-score").val(rounded); // average score

            var decision = {% if protocol_revision.finalDecision %}true{% else %}false{% endif %};

            if($.inArray(0, scoring) !== -1) {
                var val = $('input[name=zero-scores]:checked').val();
                if ( "no" == val ) {
                    $("#zero-scores").show();
                    $("#zero-scores-no").iCheck("check");
                    $("#button-save").prop("disabled", true);
                    if ( decision ) $("#button-save-and-finish").prop("disabled", true);
                }
            } else {
                $("#zero-scores").hide();
                $("#zero-scores-no").iCheck("check");
                $("#button-save").prop("disabled", false);
                if ( decision ) $("#button-save-and-finish").prop("disabled", false);
            }
        }
    </script>
{% endblock %}
