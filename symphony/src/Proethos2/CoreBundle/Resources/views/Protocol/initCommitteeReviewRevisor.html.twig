{% extends "::base.html.twig" %}

{% block title %}{% trans %}Technical Assessment{% endtrans %}{% endblock %}

{% block content %}
    
    <div class="container-fluid main-content see-submission">

        <div class="row">
            <div class='col-md-12'>
                <h1 class="page-header">{% trans %}Technical Assessment{% endtrans %}</h1>
            </div>
        </div>

        {% if documents %}
            <div class="row">
                <div class="col-md-6">
                    <h2 class='sub-header' style="margin-top: 0;">{% trans %}Reviewer{% endtrans %}</h2>
                    <ul>
                        {% for document in documents %}
                            <li>
                                <a href="{{ document.uri }}" target="_blank">
                                    <span data-toggle="tooltip" data-placement="top" title="{{ document.description }}">
                                        {{ document.title }}
                                    </span>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <br />
        {% endif %}
        
        {% include 'Proethos2CoreBundle:Protocol:meta.html.twig' %}

        <!-- action -->
        <form method="POST" id='form-action'>
            
            <input type="hidden" name="token" value="{{ csrf_token('initial-committee-review-revisor') }}"/>
            <input type="hidden" id="input-is-final-revision" name="is-final-revision" value="false">

            <div class='block action'>
                <div class='row'>
                    <div class="col-md-12">
                        <h2 class='sub-header'>{% trans %}Reviewer's evaluation{% endtrans %}:</h2>
                    </div>
                </div>

                <div class='block'>
                    <div class='row'>
                        <div class="col-md-12">
                            <div class="form-group">
                                <h4>{% trans %}Notes{% endtrans %}:</h4>
                                <ul>
                                    <li>{% trans %}Per attribute, please select one Scoring option and one Feedback option.{% endtrans %}</li>
                                    <li>{% trans %}If any zero scores are selected, you’ll be requested to confirm them at the end.{% endtrans %}</li>
                                    <li>{% trans %}If Revisions required is selected as Feedback, please input your revisions.{% endtrans %}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />

                <div class='block'>
                    <div class='row'>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="field-desc">
                                    <h4>{% trans %}Effectiveness{% endtrans %}</h4>
                                    <a href="#" class="modal-help-text" data-toggle="modal" data-target="#modal-help-text" data-text="{% trans %}Evidence of successfully achieving its objectives. This evidence may include results sustained over time, tangible products, and methodologies.{% endtrans %}"><i class='glyphicon glyphicon-question-sign'></i></a>
